    "adminUsername": {
      "type": "string",
      "value": "[parameters('adminUsername')]"
    },
    "storageAccountName": {
      "type": "string",
      "value": "[parameters('storageAccountName')]"
    },
    "cmkEnabled": {
      "type": "bool",
      "value": "[parameters('enableCMK')]"
    },
    "keyVaultName": {
      "type": "string",
      "value": "[if(parameters('enableCMK'), format('{0}-{1}-kv', parameters('projectName'), variables('kvSuffix')), '')]"
    },
    "diskEncryptionSetName": {
      "type": "string",
      "value": "[if(parameters('enableCMK'), format('{0}-disk-encryption-set', parameters('vmName')), '')]"
    }
  }
}